<Window x:Class="UMR_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMR_UI.SampleData"
        mc:Ignorable="d"
        Title="ÜbungsMomentReminder" Height="450" Width="800"
        Background="LightGray">
    <Window.DataContext>
        <local:UeMRHauptansichtSampleData/>
    </Window.DataContext>
    
    <Grid>

        <TabControl Background="Gray">
            <TabItem Header="Log-In">
                
            </TabItem>

            <TabItem Header="Hauptansicht">
                <DockPanel>
                    <StackPanel>
                        <Label>Teilnehmer Explorer</Label>
                        <DataGrid ItemsSource="{Binding Teilnehmerliste}"
                          AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Übungsmoment"
                                            Binding="{Binding Uebungsmoment}"/>
                                <DataGridTextColumn Header="Vorname"
                                            Binding="{Binding Vorname}"/>
                                <DataGridTextColumn Header="Nachname"
                                            Binding="{Binding Name}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <StackPanel>
                        <Label Content="{Binding UeMRTeilnehmerliste}"/>
                        <ListBox ItemsSource="{Binding Path=UeMRTeilnehmerliste}" DisplayMemberPath="Name"
                         IsSynchronizedWithCurrentItem="true"/>
                    </StackPanel>

                </DockPanel>
            </TabItem>

            <TabItem Header="Statistik"></TabItem>
        </TabControl>

    </Grid>
</Window>
